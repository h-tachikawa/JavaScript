container_commands:
  00_create_leader_identifier:
    command: touch /tmp/leader_only
    leader_only: true
  01_uncomment_cron:
    command: "sed -i -e 's/#//g' /etc/cron.d/resily"
    leader_only: true
files:
  /etc/cron.d/resily:
    mode: "000644"
    owner: root
    group: root
    content: |
      MAILTO=""
      #0 10 * * 5 webapp cd /var/app/current && /opt/rubies/ruby-2.4.2/bin/bundle exec rails remind_kr_progress:send_email_per_week
      #0 10 28-31 * * webapp /usr/bin/test `date -d tomorrow +\%d` -eq 1 && cd /var/app/current && /opt/rubies/ruby-2.4.2/bin/bundle exec rails remind_kr_progress:send_email_per_month
